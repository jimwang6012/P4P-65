<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite
    name="Selendroid regression test suite"
    parallel="false"
    verbose="3" >

    <test name="selendroid element finding tests" >

        <classes>

            <class name="io.selendroid.nativetests.NativeChildElementFindingTest" />

            <!-- class name="io.selendroid.nativetests.NativeElementFindingTest" / -->

            <class name="io.selendroid.webviewdrivertests.WebElementFindingTest" />

            <class name="io.selendroid.webviewdrivertests.WebChildElementFindingTest" />
        </classes>
    </test>

    <test name="selendroid element interaction tests" >

        <classes>

            <class name="io.selendroid.nativetests.NativeElementInteractionTest" />

            <class name="io.selendroid.webviewdrivertests.WebElementInteractionTest" />
        </classes>
    </test>

    <test name="the rest" >

        <classes>

            <class name="io.selendroid.driver.MultipleWebviewHandlingTests" />

            <class name="io.selendroid.driver.WindowHandlingTests" />

            <class name="io.selendroid.nativetests.GetWindowSourceTest" />

            <class name="io.selendroid.nativetests.SelendroidUnknownCommandHandlingTest" />

            <class name="io.selendroid.nativetests.SendKeyAndNativeKeyTest" />

            <class name="io.selendroid.nativetests.WaitForProgressBarGoneAwayTest" />

            <class name="io.selendroid.webviewdrivertests.CookieHandlerTest" />
        </classes>
    </test>

    <listeners>

        <listener class-name="io.selendroid.support.LargeTestFeedbackListener" >
        </listener>
    </listeners>

</suite>